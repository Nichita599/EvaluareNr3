@model ProductInventoryApp.Models.Product

<div class="product-form-container">
    <h1>Adaugă un produs</h1>

    <form asp-action="Create" method="post">
        <div>
            <label for="Name">Denumire</label>
            <input asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>
        <div>
            <label for="Manufacturer">Producător</label>
            <input asp-for="Manufacturer" />
            <span asp-validation-for="Manufacturer"></span>
        </div>
        <div>
            <label for="Price">Preț</label>
            <input asp-for="Price" type="number" step="0.01" />
            <span asp-validation-for="Price"></span>
        </div>
        <div>
            <label for="Stock">Stoc</label>
            <input asp-for="Stock" type="number" />
            <span asp-validation-for="Stock"></span>
        </div>
        <button type="submit">Adaugă</button>
    </form>
</div>
